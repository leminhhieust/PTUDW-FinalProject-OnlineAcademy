{{#section 'js'}}

<script src="https://cdn.tiny.cloud/1/xl78rqw7ih94d0odz4ree7sh6qulso9vdkv9d2ry4dnkqsr9/tinymce/5/tinymce.min.js"
  referrerpolicy="origin"></script>
<script>
  tinymce.init({
    selector: '#txtFullDes',
    height: 300,
    plugins: 'paste image link autolink lists table media',
    menubar: true,
    toolbar: [
      'undo redo | bold italic underline strikethrough | numlist bullist | alignleft aligncenter alignright | forecolor backcolor | table link image media',
    ],
  });
</script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/5.1.3/js/fileinput.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/5.1.3/themes/fa/theme.min.js"></script>
<script>
  $('#fuMain').fileinput({
    theme: 'fa',
    dropZoneEnabled: false,
    allowedFileExtensions: ['png', 'jpg', 'gif','webp'],
  });
</script>

<script>
  $('#fuVideo').fileinput({
    theme: 'fa',
    dropZoneEnabled: false,
    allowedFileExtensions: ['mp4'],
  });
</script>

