<div class="card">
    <div class="card-header">
        Tải video khóa học
    </div>
    {{#if Status}}
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
          Đã đủ số chương
        </div>
        
         {{else}}
      
    <div class="card-body">
        <form  action="/teacher/uploadvideo_increate/{{courses}}" method="POST" enctype="multipart/form-data" id="fromVideo">
            <input type="hidden" id="txtcourID" name="CourseID" value="{{courses}}">
            <input type="hidden" id="txtTotalcontent" name="Totalcontent" value="{{Totalcontent}}">
            <input type="hidden" id="txtcurindex" name="Curindex" value="{{CurIndex}}">
                <div class="form-group">
                    <input id="fuVideo" name="fuVideo" type="file" class="file">
                </div>
        </form>
    </div>
   
     {{/if}}
      <div class="card-footer">
                    <a class="btn btn-primary" href="/teacher/updatecourses/{{courses}}" role="button">
