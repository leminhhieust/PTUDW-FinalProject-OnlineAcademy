<script>
  $('#fuMain').fileinput({
    theme: 'fa',
    dropZoneEnabled: false,
    allowedFileExtensions: ['png', 'jpg', 'gif'],
  });
</script>

<script>
  $('#fuVideo').fileinput({
    theme: 'fa',
    dropZoneEnabled: false,
    allowedFileExtensions: ['mp4'],
  });
</script>


<script>
    let doc= [];
    $('.AddChapter').on('click',function(){
        //let element ='';
        let test= $('#txtquantity').val();
        console.log(test);
        $('#txtstatus').val('Hoàn thành');
        if(doc[test-1] !=null)
        {
          doc[test-1]=$('#txtDocChapter').val();
        }
        else{
           // element=$('#txtDocChapter').val();
           doc.push($('#txtDocChapter').val());
          // doc.push(element);
        }
        for(let i=0;i<doc.length;i++)
        {
          if(doc[i].length===0)
          {
               $('#txtstatus').val('Chưa hoàn thành');
               break;
          }
        }
        $('#txtquantity').val(+test + 1);
        $('#txtDocChapter').val('');
    })
    $('.createcourses').on('click',function(){
        console.log(doc);
        $('#DocChapters').val(doc);
        $('#txtstatus').val();
        $('#txtname').val();
        $('#txtCatType').val();
        $('#TinyDes').val();
        $('#txtFullDes').val();
        $('#txtprice').val();
        $('#fromCreatecourses').submit();
  })
</script>
