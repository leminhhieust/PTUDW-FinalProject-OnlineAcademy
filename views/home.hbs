{{#section 'js'}}
<script src="https://cdnjs.cloudflare.com/ajax/libs/rateYo/2.3.2/jquery.rateyo.min.js"></script>
<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>
<script>
  {{#each this.courses_new}}
    $(function () {
      $(`#rateYoNew{{CourseID}}`).rateYo({
        rating: {{AvgStar}},
        readOnly: true,
        starWidth: "15px",
        spacing: "3px"
      });
    });
  {{/each}}

  {{#each this.courses_view}}
    $(function () {
      $(`#rateYoView{{CourseID}}`).rateYo({
        rating: {{AvgStar}},
        readOnly: true,
        starWidth: "15px",
        spacing: "3px"
      });
    });
  {{/each}}

  {{#each this.courses_outstanding}}
    $(function () {
      $(`#rateYoOutstanding{{CourseID}}`).rateYo({
        rating: {{AvgStar}},
        readOnly: true,
        starWidth: "15px",
        spacing: "3px"
      });
    });
  {{/each}}

  $(document).ready(function(){
  $('.CourseCarousel').slick({
    dots: true,
    infinite: true,
    slidesToShow: 4,
    slidesToScroll: 4,
    arrows: true
  });
});
</script>
{{/section}}

{{#section 'css'}}
<link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/gh/kenwheeler/slick@1.8.1/slick/slick-theme.css" />
<link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/rateYo/2.3.2/jquery.rateyo.min.css">
<style>
  .slick-prev:before, .slick-next:before { 
    color:red !important;
    font-size: 2.5rem;
  }
  .slick-prev, .slick-next {
    width: 2.5rem;
    height: 2.5rem;
    z-index: 2;
  }
  .slick-list {
      width: 95%;
      margin: 0 auto;
  }

  .slick-prev {
      left: 0;
  }

  .slick-next {
      right: 0;
  }

</style>
{{/section}}

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img src="/public/images/Home_carousel/fMJoXoMST5uFMZrX2XsC_online-academy-2.jpg" class="d-block w-100" alt="...">
    </div>
    <div class="carousel-item">
      <img src="/public/images/Home_carousel/Online-education.jpg" class="d-block w-100" alt="...">
    </div>
    <div class="carousel-item">
      <img src="/public/images/Home_carousel/school-elementary-bac-img.png" class="d-block w-100" alt="...">
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<div class="container-fluid mt-5">
  <h5 class="text-danger mt-5">Outstanding Courses</h5>
    <div class="d-flex flex-row">
      {{#each this.courses_outstanding}}
        <div class="card mx-5" style="width: 18rem;">
            <img class="card-img-top" src="/public/images/Courses/{{CourseID}}/tiny.jpg" alt="{{Name}}" title="{{Name}}">
            <div class="card-body">
              <h5 class="card-title font-weight-bold">{{Name}}</h5>
              <div>{{TeacherName}}</div>
              <div class="card-text font-weight-light">{{CatName}}</div>
              <div class="d-flex flex-row">
                <div style="color: #be5a0e;" class="font-weight-bold">{{AvgStar}}</div>
                <div id="rateYoOutstanding{{CourseID}}" class="pt-1"></div>
                <div>({{format2 Ratings}})</div>
              </div>
              <p class="card-text text-danger font-weight-bold">{{format1 Price}}</p>
              <a class="stretched-link" href="#"></a>
            </div>
        </div>
      {{/each}}
    </div>

    <h5 class="text-danger mt-5">New Courses</h5>
    <div class="d-flex flex-row CourseCarousel">
      {{#each this.courses_new}}
        <div class="card mx-5" style="width: 18rem;">
            <img class="card-img-top" src="/public/images/Courses/{{CourseID}}/tiny.jpg" alt="{{Name}}" title="{{Name}}">
            <div class="card-body">
              <h5 class="card-title font-weight-bold">{{Name}}</h5>
              <div>{{TeacherName}}</div>
              <div class="card-text font-weight-light">{{CatName}}</div>
              <div class="d-flex flex-row">
                <div style="color: #be5a0e;" class="font-weight-bold">{{AvgStar}}</div>
                <div id="rateYoNew{{CourseID}}" class="pt-1"></div>
                <div>({{format2 Ratings}})</div>
              </div>
              <p class="card-text text-danger font-weight-bold">{{format1 Price}}</p>
              <a class="stretched-link" href="#"></a>
            </div>
        </div>
      {{/each}}
    </div>

    <h5 class="text-danger mt-5">Popular Courses</h5>
    <div class="d-flex flex-row CourseCarousel">
      {{#each this.courses_view}}
        <div class="card mx-5" style="width: 18rem;">
            <img class="card-img-top" src="/public/images/Courses/{{CourseID}}/tiny.jpg" alt="{{Name}}" title="{{Name}}">
            <div class="card-body">
              <h5 class="card-title font-weight-bold">{{Name}}</h5>
              <div>{{TeacherName}}</div>
              <div class="card-text font-weight-light">{{CatName}}</div>
              <div class="d-flex flex-row">
                <div style="color: #be5a0e;" class="font-weight-bold">{{AvgStar}}</div>
                <div id="rateYoView{{CourseID}}" class="pt-1"></div>
                <div>({{format2 Ratings}})</div>
              </div>
              <p class="card-text text-danger font-weight-bold">{{format1 Price}}</p>
              <a class="stretched-link" href="#"></a>
            </div>
        </div>
      {{/each}}
    </div>

    <h5 class="text-danger mt-5">Top categories</h5>
    <div class="card-columns mx-5" >
      {{#each this.categories_top}}
      <div class="card">
      <img class="card-img-top h-155" src="/public/images/Categories/{{CatID}}.jpg" alt="Card image cap">
        <div class="card-body">
          <h5 class="card-title">{{CatName}}</h5>
          {{#if condition}}
            <a href="/courses/web/{{CatName}}" class="stretched-link"></a>
          {{else}}
            <a href="/courses/mobile/{{CatName}}" class="stretched-link"></a>
          {{/if}}
        </div>
      </div>
      {{/each}}
    </div>
</div>