{{#section 'js'}}
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.full.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/rateYo/2.3.2/jquery.rateyo.min.js"></script>
<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>
<script>
  {{#each this.courseRegister}}
    $(function () {
      $(`#rateYo{{CourseID}}`).rateYo({
        rating: {{AvgStar}},
        readOnly: true,
        starWidth: "15px",
        spacing: "3px"
      });
    });
  {{/each}}

  {{#each this.courseRegister}}
    $(function () {
      $(`#rateYoFav{{CourseID}}`).rateYo({
        rating: {{AvgStar}},
        readOnly: true,
        starWidth: "15px",
        spacing: "3px"
      });
    });
  {{/each}}

  $(document).ready(function(){
    $('.CourseCarousel').slick({
      dots: true,
      infinite: true,
      slidesToShow: 3,
      slidesToScroll: 3,
      arrows: true
    });
  });

  $('#txtDOB').datetimepicker({
    format: 'd/m/Y',
    timepicker: false,
    mask: true,
  });

  $('#formEdit').on('submit', function (e) {
    e.preventDefault();
    const Email = $('#txtEmail').val();
    $.getJSON(`/account/is-available-email?email=${Email}`, function (data) {
      if (data === false) {
        alert('Email already used!');
      }
      else{
      $('#formEdit').off('submit').submit();
      }
    });
  });

  $('#formChange').on('submit', function (e) {
    e.preventDefault();
    const password = $('#txtOldPassword').val();
    
    $.getJSON(`/account/is-available-password?password=${password}`, function (data) {
      if (data === false) {
        alert('Wrong Password!');
      }
      else{
        const NewPassword = $('#txtNewPassword').val();
        const Confirm = $('#txtConfirm').val();
        if (NewPassword !== Confirm){
          alert('Invalid confirm.');
        }
        else{
          $('#formChange').off('submit').submit();
        }
      }
    });
  });
</script>



