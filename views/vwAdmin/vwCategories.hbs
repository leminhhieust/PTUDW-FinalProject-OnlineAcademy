{{#section 'css'}}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/5.1.3/css/fileinput.min.css">
{{/section}}

{{#section 'js'}}
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/5.1.3/js/fileinput.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/5.1.3/themes/fa/theme.min.js"></script>
<script>
  $('#fuMain').fileinput({
    theme: 'fa',
    dropZoneEnabled: false,
    allowedFileExtensions: ['png', 'jpg', 'gif'],
  });
</script>

<script>
    $('.updateitem').on('click',function(){
        const id=$(this).data('id');
       
        $('#txtID').val(id);
        $('#txtCatName').val()
        $('#txtCatType').val();
        $('#frmUpdate').submit();
    })
</script>
{{/section}}

{{#if err_message}}
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
          {{err_message}}
        </div>
{{/if}}
<div class="card" >
    <div class="card-body">
         <a name="" id="" class="btn btn-primary addItem"  role="button"
         data-toggle="collapse" data-target="#boxnoidung">
             <i class="fa fa-plus" aria-hidden="true">
                Add Category
             </i>
         </a>
             <div id="boxnoidung" class="card collapse mt-4" style="width: 18rem;">
                <div>
                <form action="" method="POST" enctype="multipart/form-data">
                    <div class="card">
                        <h5 class="card-header">Upload</h5>
                        <div class="card-body">
                        <div class="form-group">
                            <input id="fuMain" name="fuMain" type="file" class="file">
                        </div>
                        </div>
                        <div class="form-group">
                        <label for="txtnewnamecategory">New Name Category</label>
                        <input type="text" class="form-control" id="txtnewnamecategory" name="CatName" placeholder="Enter new name">
                         </div>
                            <select class="custom-select" name="CatType">
                                <option selected>Chọn lĩnh vực</option>
                                {{#each CatTypes}}
                                   {{#if CatType}}
                                        <option value="{{CatType}}">Web Category</option>
                                   {{else}}
                                        <option value="{{CatType}}">Mobile Category</option>
                                   {{/if}}
                                {{/each}}
                            </select>
                        <div class="card-footer">
                        <button type="submit" class="btn btn-primary">
                            <i class="fa fa-check" aria-hidden="true"></i>
                            Save
                        </button>
                        </div>
                    </div>
                </form>
                </div>
             </div>
        <form action="/admin/categories/update" id="frmUpdate" method="POST">
            <input type="hidden" name="CatID" id="txtID">
          {{!-- <div id="boxupdate" class="card collapse mt-4" style="width: 18rem;"> --}}
                <div class="form-group">
                        <label for="txtnewnamecategory">Box Input Update Category</label>
                        <input  type="text" class="form-control"  name="CatName" id="txtCatName" placeholder="Enter new name">
                         </div>
                            <select class="custom-select" name="CatType" id="txtCatType">
                                <option selected>Chọn lĩnh vực</option>
                               {{#each CatTypes}}
                                   {{#if CatType}}
                                        <option value="{{CatType}}">Web Category</option>
                                   {{else}}
                                        <option value="{{CatType}}">Mobile Category</option>
                                   {{/if}}
                                {{/each}}
                            </select>
                        <div class="card-footer">
                </div>
          {{!-- </div> --}}
     <form>
       <div class="container-fluid mt-5">
            <div class="card-columns mx-5  " >
            {{#each categories}}
                <div class="card mx-5" style="width: 18rem;">
                    <div class="card" style="width: 18rem;">
                        <img class="card-img-top" src="../../public/images/Categories/{{CatID}}.jpg" alt="Image Category">
                        <div class="card-body">
                            <h5 class="card-title">{{CatName}}</h5>
                            <a  class="btn btn-danger" href="/admin/categories/delete/{{CatID}}" role="button">
                                <i class="fa fa-trash" aria-hidden="true"></i>
                                Delete
                            </a>
                            <a  data-id="{{CatID}}" name="" id=""
                             class="btn btn-primary updateitem"  role="button"
                            data-toggle="collapse" data-target="#boxupdate" href="javascript:;">
                               <i class="fa fa-pencil" aria-hidden="true"></i>
                                Update
                            </a>
                            <span class="badge badge-pill badge-danger float-right">{{count}}</span>
                        </div>
                    </div>
                </div>
            {{/each}}
            </div>
        </div>
    </form>
    </div>
</div>