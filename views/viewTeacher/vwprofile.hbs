<div style="padding-left: 200px;">
<div class="modal fade" id="ChangePasswordModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Change Your Password</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <form action="/teacher/profile/change" method="POST" id="formChange">
              <div class="form-group">
                <label for="recipient-name" class="col-form-label">Enter your current password:</label>
                <input type="password" class="form-control" name="oldPassword" id="txtOldPassword" required>
              </div>
              <div class="form-group">
                <label for="recipient-name" class="col-form-label">Enter your new password:</label>
                <input type="password" class="form-control" name="newPassword" id="txtNewPassword" required>
              </div>
              <div class="form-group">
                <label for="recipient-name" class="col-form-label">Repeat your new password</label>
                <input type="password" class="form-control" id="txtConfirm" required>              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button class="btn btn-primary" type="submit">Save</button>
               </div>
            </form>
          </div>
        </div>
      </div>
</div>
<div class="card">
    <div class="card-header">
        <h2 class="d-flex justify-content-center">Thông tin cá nhân giáo viên</h2>
    </div>
    <div class="card-body d-flex justify-content-center" style="font-size: x-large;">
        <form action="/teacher/profile" id="updateprofileteacher" method="POST" >
        <input type="hidden" name="UserID" id="txtUserID">
            <div class="card">
                <label for="">Họ và tên giáo viên</label>
                <input type="text" name="Name" id="txtName" value="{{users.Name}}">
                <label for="">Thông tin liên lạc (Email) </label>
                <input type="email" name="Email" id="txtEmail" value="{{users.Email}}">
                <label for="">Ngày tháng năm sinh</label>
                <input type="text" name="DOB"  id="txtDOB" value="{{DOB}}">
                <label for="">Giới thiệu bản thân</label>
             <textarea type="text"  name="Des" id="txtDes">{{users.Des}}</textarea>
            </div>
        </form>
    </div>
    <div class="card-body " style="font-size: x-large;">
        <div class="card-body d-flex justify-content-center" >Danh sách khóa học đã đăng</div>
        <div class="m-5 ">
        {{#each courses}}
           <div class="card mb-3 d-flex justify-content-center" style="background: rgb(100, 197, 201); width:50%;" >
                <div >Tên khóa học</div>
                <div>{{Name}}</div>
                <div class="d-flex justify-content-end m-3">
                {{#if Status}}
                    <span class="badge badge-pill badge-danger float-right">Hoàn thành</span>
                {{else}}
                    <span class="badge badge-pill badge-danger float-right">Chưa hoàn thành</span>
                {{/if}}
                <div>
                <a style="font-size: x-large;"  name="" id="" class="btn btn-primary" href="/teacher/updatecourses/{{CourseID}}" role="button">
                    <i class="fa fa-wrench" aria-hidden="true"></i>
                    Chỉnh sửa
                </a></div>
                </div>
           </div>
        {{/each}}
        </div>
    </div>
</div>
<div class="card-footer" >
                    <a data-id="{{users.UserID}}" class="btn btn-primary updateprofile" href="#" role="button">
                      <i style="font-size: x-large;" class="fa fa-check" aria-hidden="true"></i>
                       Save
                    </a>

         <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#ChangePasswordModal">
          Change your password
          <i class="fa fa-key" aria-hidden="true"></i>
        </button> 
</div>
</div>
